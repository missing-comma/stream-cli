{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"types": ["node", "jest"],
		"composite": false,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"inlineSources": false,
		"isolatedModules": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"preserveWatchOutput": true,
		"skipLibCheck": true,
		"strict": true,
		"outDir": "./deploy",
		"baseUrl": "./src",
		"paths": {
			"~/*": ["*"]
		}
	},
	"exclude": [
		"dist",
		"node_modules",
		"**/test/**/*",
		"**/tests/**/*",
		"**/__tests__/**/*",
		"**/__mocks__/**/*",
		"**/__generated__/**/*",
		"jest.config.ts"
	]
}
